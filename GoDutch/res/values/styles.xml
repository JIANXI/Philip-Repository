<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="StyleTitle" >
        <item name="android:textColor" >#ff000000</item>
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:layout_centerVertical" >true</item>
        <item name="android:paddingLeft" >10dp</item>
    </style>
    
    <style name="StyleListView" >
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height" >match_parent</item>
        <item name="android:divider" >@drawable/divider</item>
        <item name="android:cacheColorHint" >@color/transparent</item>
        <item name="android:layout_marginLeft" >2dp</item>
        <item name="android:layout_marginRight" >2dp</item>
        <item name="android:background" >@color/turquoise</item>
    </style>
    
	<style name="StyleListViewItemText">
	    <item name="android:textSize">20sp</item>
	    <item name="android:textColor">@color/black</item>
	</style>
	
	<style name="StyleListViewItemImage">
	    <item name="android:layout_width">35dp</item>
	    <item name="android:layout_height">35dp</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:layout_marginTop">3dp</item>
	    <item name="android:layout_marginBottom">3dp</item>
	</style>
	
	<style name="StylePayoutImageView">
	    <item name="android:layout_width" >35dp</item>
        <item name="android:layout_height" >35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">2dp</item>
	</style>
    
	<style name="StyleNumberButton">
	   	<item name="android:layout_width" >60dp</item>
	   	<item name="android:layout_height" >60dp</item>
		<item name="android:layout_margin" >1dp</item>
	</style>
	
</resources>
