<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:background="@drawable/selector_listview" >
    
    <ImageView 
        android:id="@+id/imageViewAccountBookIcon"
		style="@style/StyleListViewItemImage"
        android:contentDescription="@string/app_name" />
    
    <TextView 
        android:id="@+id/textViewAccountBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewAccountBookIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:singleLine="true" 
        android:textSize="20sp"
        android:textColor="@color/black" />
    
    <TextView 
        android:id="@+id/textViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:singleLine="true" 
        android:textSize="15sp"
        android:textColor="@color/black" />

</RelativeLayout>
