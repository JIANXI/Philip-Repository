<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 帐本添加编辑对话框布局 -->
    
    <EditText
        android:id="@+id/editTextAccountBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"    
        android:hint="@string/HintAccountBookName"
        android:maxLength="20" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/checkBoxIsDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAccountBookName"
        android:text="@string/CheckBoxTextDefaultAccountBook" />

</RelativeLayout>
